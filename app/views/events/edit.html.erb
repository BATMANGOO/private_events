<section class="section">
  <div class="section">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-4">
          <h2 class="title is-2">Edit Event</h2>
          <%= simple_form_for(@event) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <div class="field">
              <div class="control">
                <%= f.input :title, required: true, autofocus: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
              </div>
            </div>

            <div class="field">
              <div class="control">
              <%= f.input :body, required: true, autofocus: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" } %>
              </div>
            </div>

            <div class="field">
              <div class="control">
              <%= f.input :date, required: true, autofocus: true, input_html: { class: "date" }, label_html: { class: "label" } %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <div class="form-actions">
                  <%= f.button :submit %>
                  <button><%= link_to "Cancel", root_path %></button>
                  <%= link_to 'Show', @event %> |
                  <%= link_to "Back", :back %> 
                </div>
              </div>
            </div>
          <% end %>
          <br />
        </div>
      </div>
    </div>
  </div>
</section>
